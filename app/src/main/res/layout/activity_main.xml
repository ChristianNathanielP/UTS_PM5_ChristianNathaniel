<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingHorizontal="20dp"
    >


    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="40dp"
        />
    
    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/icon"
        android:text="@string/slogan"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/awalan1"
        app:layout_constraintTop_toBottomOf="@+id/slogan"
        android:layout_marginTop="100dp"
        android:text="@string/awalan1"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awalan1_btn"
        app:layout_constraintTop_toBottomOf="@+id/awalan1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:text="@string/awalan1_btn"
        android:textSize="12sp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="50dp"
        android:background="@drawable/border_radius"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/awalan2"
        app:layout_constraintTop_toBottomOf="@+id/awalan1_btn"
        android:layout_marginTop="20dp"
        android:text="@string/awalan2"
        android:textSize="18sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awalan2_btn"
        app:layout_constraintTop_toBottomOf="@+id/awalan2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:text="@string/awalan2_btn"
        android:textSize="12sp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="50dp"
        android:background="@drawable/border_radius"
        android:layout_marginTop="10dp"
        />













</androidx.constraintlayout.widget.ConstraintLayout>